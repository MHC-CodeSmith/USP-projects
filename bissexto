#include <stdio.h>
int main(int argc, char* argv[]){
    int ano;

    printf("informe um ano: ");
    scanf("%d", &ano);
//receber a variavel
    if( ano%4 == 0 && ano%100 != 0){
        printf("O ano %d eh bissexto \n", ano);
//caso o ano seja divisivel por 4, mas n por 100 retorna bissexto
    } else if (ano%400 == 0){
            printf("O ano %d eh bissexto\n", ano);}
//caso seja divisivel por 100 e por 400 retorna bissexto
        else {
            printf("O ano %d nao eh bissexto\n", ano);
//caso seja divisivel por 100, mas n por 400, retorna n eh bissexto
        }
    }
