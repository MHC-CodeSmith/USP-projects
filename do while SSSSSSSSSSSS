//pede para escrever a variavel e recebe o seu valor
do {
printf("\nO algarismo digitado e %c", ch);
//mostra o algarismo digitado
ch=getchar();
}
while (ch!= 's'&& ch!= 'S');
//condic√£o para sair do loop
printf("\nSaindo do loop\n");
//mostrar que saiu do loop
}
